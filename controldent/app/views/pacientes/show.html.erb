

<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="col-6">
    <table class="table table-primary table-striped">
      <tr class="table-primary">
        <td class="table-primary"><strong>Rut:</strong></td>
        <td class="table-primary"><%= @paciente.rut %></td>
      </tr>

      <tr class="table-info">
        <td class="table-info"><strong>Nombre:</strong></td>
        <td class="table-info"><%= @paciente.nombre %></td>
      </tr>

      <tr class="table-primary">
        <td class="table-primary"><strong>Apellido:</strong></td>
        <td class="table-primary"><%= @paciente.apellido %></td>
      </tr>

      <tr class="table-info">

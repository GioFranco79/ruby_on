<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Rut</th>
      <th>Razon</th>
      <th>Logo</th>
      <th>Fono</th>
      <th>Email</th>
      <th>Ciudad</th>
      <th>Comuna</th>
      <th>Direccion</th>
      <th>Representante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.rut %></td>
        <td><%= cliente.razon %></td>
        <td><%= cliente.logo %></td>
        <td><%= cliente.fono %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.ciudad %></td>
        <td><%= cliente.comuna %></td>
        <td><%= cliente.direccion %></td>
        <td><%= cliente.representante %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Centros</h1>

  <table class="table table-primary table-striped table-auto table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Ciudad</th>
        <th>Fono</th>
        <th>Email</th>
        <th>Comuna</th>
        <th>Direccion</th>
        <th>Cliente</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @centros.each do |centro| %>
        <tr>
          <td><%= centro.nombre %></td>
          <td><%= centro.ciudad %></td>
          <td><%= centro.fono %></td>
          <td><%= centro.email %></td>
          <td><%= centro.comuna %></td>
          <td><%= centro.direccion %></td>
          <td><%= centro.cliente_id %></td>
          <td><%= link_to 'Show', centro %></td>
          <td><%= link_to 'Edit', edit_centro_path(centro) %></td>
          <td><%= link_to 'Destroy', centro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Agregar Centro', new_centro_path, class:"btn btn-primary" %>
</div>
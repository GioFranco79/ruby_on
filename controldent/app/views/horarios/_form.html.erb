        <%= form.label "Box de atenciÃ³n", class:"form-label" %>
        <%= form.number_field :box, class:"form-control" %>
      </div>

      <div class="field">
        <%= form.label "Centro", class:"form-label" %>
        <%= collection_select :horario, :centro_id, Centro.all, :id, :nombre, {:prompt => "Seleccione Centro"} %>

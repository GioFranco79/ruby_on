<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Especialidades</h1>

  <table class="table table-primary table-striped table-auto table-bordered">
    <thead>
      <tr>
        <th>Nomesp</th>
        <th>Profesional</th>
        <th>Centro</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @especialidads.each do |especialidad| %>
        <tr>
          <td><%= especialidad.nomesp %></td>
          <td><%= especialidad.profesional_id %></td>
          <td><%= especialidad.centro_id %></td>
          <td><%= link_to 'Show', especialidad %></td>
          <td><%= link_to 'Edit', edit_especialidad_path(especialidad) %></td>
          <td><%= link_to 'Destroy', especialidad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Especialidad', new_especialidad_path, class:"btn btn-primary" %>
</div>
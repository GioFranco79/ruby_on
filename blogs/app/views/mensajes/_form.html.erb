<%= form_with(model: mensaje) do |form| %>
  <% if mensaje.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mensaje.errors.count, "error") %> prohibited this mensaje from being saved:</h2>

      <ul>
        <% mensaje.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :autor %>
    <%= form.text_field :autor %>
  </div>

  <div class="field">
    <%= form.label :mensaje %>
    <%= form.text_area :mensaje %>
  </div>

  <div class="field">
    <%= form.label :post_id %>
    <%= collection_select :mensaje, :post_id, Post.all, :id, :titulo, :prompt => true  %>    
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

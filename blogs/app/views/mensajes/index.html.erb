<p id="notice"><%= notice %></p>

<h1>Mensajes</h1>

<table>
  <thead>
    <tr>
      <th>Autor</th>
      <th>Mensaje</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mensajes.each do |mensaje| %>
      <tr>
        <td><%= mensaje.autor %></td>
        <td><%= mensaje.mensaje %></td>
        <td>
        <% @posts.each do |post| %>
          <% if post.id == mensaje.post_id %>
            <%= post.titulo %>
          <% end %>
        <% end %>  
        </td>
        <td><%= link_to 'Mostrar', mensaje %></td>
        <td><%= link_to 'Editar', edit_mensaje_path(mensaje) %></td>
        <td><%= link_to 'Eliminar', mensaje, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


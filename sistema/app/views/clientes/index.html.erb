<p id="notice"><%= notice %></p>
<div class="container">
  <h2>Clientes</h2>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Rut</th>
        <th>Razon</th>
        <th>Fono</th>
        <th>Email</th>
        <th>Ciudad</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.id %></td>
          <td><%= cliente.rut %></td>
          <td><%= cliente.razon %></td>
          <td><%= cliente.fono %></td>
          <td><%= cliente.email %></td>
          <td><%= cliente.ciudad %></td>
          <td><%= link_to 'Mostrar', cliente %></td>
          <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
          <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to 'Nuevo Cliente', new_cliente_path, class:"btn btn-primary"%>

<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-9">
      <h1>Autores</h1>
    </div>
    <div class="col-3">
    <%= link_to 'Crear Autor', new_autor_path, class:"btn btn-primary", role:"button" %>
    </div>
  <div>
  
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Nacionalidad</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @autors.each do |autor| %>
        <tr>
          <td><%= autor.id %></td>
          <td><%= autor.nombre %></td>
          <td><%= autor.apellido %></td>
          <td><%= autor.nacionalidad %></td>
          <td><%= link_to 'Mostrar', autor %></td>
          <td><%= link_to 'Editar', edit_autor_path(autor) %></td>        
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<p id="notice"><%= notice %></p>

<h1>Edicions</h1>

<table>
  <thead>
    <tr>
      <th>Fechad</th>
      <th>Libro</th>
      <th>Autor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @edicions.each do |edicion| %>
      <tr>
        <td><%= edicion.fechad %></td>
        <td><%= edicion.libro_id %></td>
        <td><%= edicion.autor_id %></td>
        <td><%= link_to 'Show', edicion %></td>
        <td><%= link_to 'Edit', edit_edicion_path(edicion) %></td>
        <td><%= link_to 'Destroy', edicion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


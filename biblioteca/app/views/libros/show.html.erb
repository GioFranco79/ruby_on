<p id="notice"><%= notice %></p>
<div class="small-container center-block"
  <p>
    <strong>Nombre:</strong>
    <%= @libro.nombre %>
  </p>

  <p>
    <strong>Editorial:</strong>
    <%= @libro.editorial %>
  </p>

  <p>
    <strong>AÃ±o:</strong>
    <%= @libro.anho %>
  </p>

  
  <p>
    <strong>Autores:</strong>    
  </p>

  <table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Nacionalidad</th>      
    </tr>
  </thead>
  <tbody>
    <% @autores.each do |autor| %>
      <% @ediciones.each do |edi| %>           
        <% if edi.libro_id == @libro.id && edi.autor_id == autor.id %>
          <tr>
            <td><%= autor.nombre %></td>
            <td><%= autor.apellido %></td>
            <td><%= autor.nacionalidad %></td>
          </tr>
        <% end %>      
      <% end %>
    <% end %>
  </tbody>
</table>

  <%= link_to 'Editar', edit_libro_path(@libro) %> |
  <%= link_to 'Volver', libros_path %>
</div>
